<templates id="template" xml:space="preserve">

    <t
        t-name="pos_order_new_line.NewlineButton"
        t-inherit="point_of_sale.ControlButtons"
        t-inherit-mode="extension"
    >
        <xpath expr="//t[@t-if='props.showRemainingButtons']/div" position="inside">
            <button
                t-if="this.pos.get_order().get_orderlines().length !== 0"
                t-att-class="buttonClass"
                t-on-click="onClickNewlineButton"
            >
				<i class="fa fa-plus" />
				New Line
            </button>
        </xpath>
    </t>

</templates>
